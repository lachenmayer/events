body
  font-family: 'proxima-nova', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 100%
  line-height: 1.5
  margin: 0
  padding: 0

$nav_height = 46px

ellipsis()
  white-space nowrap
  overflow hidden
  -o-text-overflow ellipsis
  text-overflow ellipsis

nav
  text-align center
  background-color #34495e
  height $nav_height
  position fixed
  top 0
  left 0
  width 100%
  z-index 1000                 // We want the navbar to always show.

  #back
    margin-left 10px
    margin-top 10px
    padding 0 10px
    height 25px
    position absolute
    top 0
    left 0
    z-index 10000
    display none
    font-size 14px
    background-color #5e8bb6
    border-radius 4px
    line-height 25px
    max-width 20%
    color #34495e
    text-shadow 0 1px #91afcb
    ellipsis()
    box-shadow 0 1px 0 #18222b

  h1
    margin 0
    line-height $nav_height
    color #d8e2ec
    width 60%
    margin 0 auto
    font-weight: 600
    text-transform: uppercase
    letter-spacing: 0.1em
    text-shadow 0 2px 1px #253544
    
    .inner
      ellipsis()

  #accessory-button
    floatright
    font-size 14px
    background-color #888
    padding 0 5px
    border-radius 4px
    box-shadow 0 1px 0 #ccc
    border 1px solid #666
    line-height 25px
    max-width 20%
    ellipsis()
    margin-right 10px
    margin-top 10px
    display none

#main-view
  background-color #eee
  position fixed
  left 0
  top $nav_height
  z-index 100                  // Position it below the navbar.
  width 100%
  height 100%
  overflow scroll

