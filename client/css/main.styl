$background_color = #eee

body
  font-family: 'proxima-nova', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 100%
  line-height: 1.5
  margin: 0
  padding: 0
  background-color $background_color

$nav_height = 46px

ellipsis()
  white-space nowrap
  overflow hidden
  -o-text-overflow ellipsis
  text-overflow ellipsis

nav
  text-align center
  background-color #34495e
  height $nav_height
  position fixed
  top 0
  left 0
  width 100%
  z-index 1000                 // We want the navbar to always show.

  #back
    height $nav_height
    position absolute
    top 0
    left 0
    padding 0 15px
    z-index 10000
    display none
    font-size 26px
    background-color #253342
    line-height $nav_height
    max-width 20%
    color #869fb9
    ellipsis()

  h1
    margin 0
    line-height $nav_height
    color #d8e2ec
    width 60%
    margin 0 auto
    font-weight: 600
    text-transform: uppercase
    letter-spacing: 0.1em
    text-shadow 0 2px 1px #253544

    .inner
      ellipsis()

  #accessory-button
    float right
    font-size 16px
    background-color #547da6
    padding 0 15px
    height 100%
    line-height $nav_height
    max-width 20%
    color #233649
    text-shadow 0 1px 0 #8fa9c2
    font-weight 600
    ellipsis()

#container
  margin-top 46px
  
#helper-view
  height 100px
  display none
  position fixed
  top $navbar_height
  width 100%
  background-color $background_color
  border-bottom 1px solid #ccc

nav.shadow
  box-shadow: 0 3px 3px rgba(0,0,0,0.2)
