$nav_height = 44px

ellipsis()
  white-space nowrap
  overflow hidden
  -o-text-overflow ellipsis
  text-overflow ellipsis

nav
  text-align center
  background-color #bbb
  height $nav_height
  position fixed
  top 0
  left 0
  width 100%
  z-index 1000                 // We want the navbar to always show.
  border-bottom 1px solid #888
  box-shadow 0 3px 5px rgba(0,0,0,0.2)

  #back
    margin-left 10px
    margin-top 10px
    padding 0 10px
    height 25px
    position absolute
    top 0
    left 0
    z-index 10000
    display none
    font-size 14px
    background-color #888
    border-radius 4px
    box-shadow 0 1px 0 #ccc
    border 1px solid #666
    line-height 25px
    max-width 20%
    ellipsis()

  h1
    margin 0
    line-height $nav_height
    color #444
    text-shadow 0 1px #ddd
    width 60%
    margin 0 auto
    ellipsis()

  #accessory-button
    floatright
    font-size 14px
    background-color #888
    padding 0 5px
    border-radius 4px
    box-shadow 0 1px 0 #ccc
    border 1px solid #666
    line-height 25px
    max-width 20%
    ellipsis()
    margin-right 10px
    margin-top 10px
    display none

#main-view
  background-color #eee
  position fixed
  left 0
  top 0
  z-index 100                  // Position it below the navbar.
  width 100%
  height 100%
  overflow scroll

  .inner
    margin-top $nav_height     // Account for the navbar which is above everything else.

