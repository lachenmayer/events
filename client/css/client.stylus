$navbar-height = 45px

body
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight: 400
  margin: 0
  padding: 0

h1
  font-weight: 500

nav
  text-align: center
  height: $navbar-height
  background: #aaa
  position: fixed
  top: 0
  left: 0
  width: 100%
  
  h1
    font-size: 25px
    margin: 0
    line-height: $navbar-height
    color: #444
    text-shadow: 0 1px #ccc
  