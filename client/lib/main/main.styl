body
  font-family: 'Helvetica Neue'
  margin: 0
  padding: 0
  
$nav_height = 50px
  
nav
  text-align: center
  background-color: #bbb
  height: $nav_height
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 1000
  border-bottom: 1px solid #888
  
  h1
    margin: 0
    line-height: $nav_height
    color: #444
    text-shadow: 0 1px #ddd
    
#main-view
  background-color: #eee
  position: fixed               // We want the navbar to always show.
  left: 0
  top: 0
  z-index: 100
  width: 100%
  height: 100%
  overflow: scroll
  
  .inner
    margin-top: $nav_height     // Account for the navbar which is above everything else.
  