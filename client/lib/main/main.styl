body
  font-family: 'Helvetica Neue'
  font-size: 100%
  line-height: 1.5
  margin: 0
  padding: 0

$nav_height = 44px

nav
  text-align: center
  background-color: #bbb
  height: $nav_height
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 1000                 // We want the navbar to always show.
  border-bottom: 1px solid #888
  box-shadow: 0 3px 5px rgba(0,0,0,0.2)

  h1
    margin: 0
    line-height: $nav_height
    color: #444
    text-shadow: 0 1px #ddd

#main-view
  background-color: #eee
  position: fixed
  left: 0
  top: 0
  z-index: 100                  // Position it below the navbar.
  width: 100%
  height: 100%
  overflow: scroll

  .inner
    margin-top: $nav_height     // Account for the navbar which is above everything else.

