#not-found
  img
    max-width 100%
    margin-bottom: 20px
    
  #content
    padding 0 20px
  
    h1
      font-size: 100px
      text-align: center
      font-family Helvetica
      font-weight bold
      color: #aaa
      text-shadow: 0 2px 0 #fff
    
    p
      margin 1.5em 0
      
    ul
      list-style-type disc
      list-style-position outside
      margin-left 1.5em
      
      li
        margin-bottom 0.75em
        
    a
      color #ac0000
      border-bottom 1px solid #ac0000