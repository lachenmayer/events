#event-view
  padding 20px
  .image
    max-height 288px
    overflow hidden
    margin 0 -20px    // Account for the left and right padding.
    margin-top: -20px // Account for the top padding.
    background: #000
  img
    max-width 100%
    margin: 0 auto;
  header
    margin-bottom 20px
  h1
    margin-top: 20px
    font-size 30px
  p.location
    color: #666
  p.date
    font-size: 120%
    strong
      margin-left: 5px
      color: #333
    strong.today
      color: #bc3989
